{if $homeslider.slides}
  <div id="slider-with-blocks-1" class="heroSlider royalSlider rsMinW rsDefault ">
    {foreach from=$homeslider.slides item=slide}
      <!--Slide demo 1-->
      <div class="rsContent slide4 {if $slide.side == 2}right{else}left{/if}">
        <a class="rsImg" href="{$slide.background}">palms & beach</a>
        <div class="bContainer">
        </div>
        <div class="rsABlock slideInfo" data-move-offset="100" data-move-effect="left">
          <div class="bullets">
            <div class="bullet1"></div>
            <div class="bullet2"></div>
          </div>
          <h1 class="hero-title">{$slide.title|strip_tags}</h1>
          <p><strong>{$slide.description|strip_tags}</strong></p>
          <a href="{$slide.url}" class="hero-button">
            {$slide.legend|strip_tags}
          </a>
        </div>
        <img class="rsABlock sliderimage" data-fade-effect="none" data-move-effect="bottom" data-opposite="true" data-move-offset="450" data-delay="350" data-speed="300" data-easing="easeOutBack" src="{$slide.image}" data-rsw="707" data-rsh="471"/>
      </div>
    {/foreach}
  </div>
  <div class="lines2">
    <dir class="line1"></dir>
    <dir class="line2"></dir>
    <dir class="line3"></dir>
  </div>
{/if}
